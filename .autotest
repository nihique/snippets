# ~.autotest
require 'autotest_notification'
SPEAKING = false
DOOM_EDITION = false
BUUF = true
PENDING = true
STICKY = false
SUCCESS_SOUND = ''
FAILURE_SOUND = ''

# .autotest - to troubleshoot
Autotest.add_hook :initialize do |at|
  # files in log directory causes autotest infinite loop when test fails
  at.add_exception(%r{^\./log})
end
